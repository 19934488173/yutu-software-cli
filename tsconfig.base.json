{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declarationMap": false,
		"sourceMap": false,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"*": ["*", "*.js"],
			"@yutu-cli/share-utils": ["utils/share-utils/src/index.ts"],
			"@yutu-cli/debug-log": ["utils/debug-log/src/index.ts"],
			"@yutu-cli/get-npm-info": ["utils/get-npm-info/src/index.ts"],
			"@yutu-cli/exec": ["core/exec/src/index.ts"],
			"userhome": ["core/cli/types/userhome.d.ts"]
		},
		"outDir": "./dist"
	},
	"exclude": ["node_modules"]
}
