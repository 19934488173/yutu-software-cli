{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declarationMap": false,
		"sourceMap": false,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"*": ["*", "*.js"],
			"@yutu-software-cli/share-utils": ["utils/share-utils/src/index.ts"],
			"@yutu-software-cli/debug-log": ["utils/debug-log/src/index.ts"],
			"@yutu-software-cli/get-npm-info": ["utils/get-npm-info/src/index.ts"],
			"@yutu-software-cli/exec": ["core/exec/src/index.ts"],
			"@yutu-software-cli/package-handler": [
				"models/package-handler/src/index.ts"
			],
			"@yutu-software-cli/command-handler": [
				"models/command-handler/src/index.ts"
			],
			"@yutu-software-cli/template-installer": [
				"utils/template-installer/src/index.ts"
			],
			"npminstall": ["models/package-handler/types/npminstall.d.ts"]
		},
		"outDir": "./dist"
	},
	"include": [
		"core/**/*.ts",
		"utils/**/*.ts",
		"models/**/*.ts",
		"commands/**/*.ts",
		"types/global.d.ts"
	],
	"exclude": ["node_modules"]
}
